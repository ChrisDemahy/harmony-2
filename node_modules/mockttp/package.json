    "@types/cors": "^2.8.6",
    "@types/express": "^4.0.33",
    "@types/node": "^10.12.9",
    "@types/node-forge": "^0.9.1",
    "base64-arraybuffer": "^0.1.5",
    "body-parser": "^1.15.2",
    "brotli": "^1.3.2",
    "cacheable-lookup": "^5.0.4",
    "common-tags": "^1.8.0",
    "connect": "^3.7.0",
    "cors": "^2.8.4",
    "cors-gate": "^1.1.3",
